	@SuppressWarnings("unchecked")
	@Override
	public List<User> findLast(int limit) {
Session session = sessionFactory.getCurrentSession();
    	
    	String hql = "from User u " + 
    				 "order by u.id desc";
    	
		return session.createQuery(hql).setMaxResults(limit).getResultList();
	}

